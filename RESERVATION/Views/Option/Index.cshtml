@model IEnumerable<RESERVATION.Models.T_OPTION>

@{
    ViewData["Title"] = "Index";
}

<h1>オプション</h1>

<p>
    <a asp-action="Create" class="blinking-button">&#x271A;</a>

</p>
<div class="w-100 overflow-auto">

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.courceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.optionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alertMessage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.courceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.optionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alertMessage)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.OptionId" class="btn btn-outline-secondary">&#x1F4DD;</a>
                        <a asp-action="Details" asp-route-id="@item.OptionId" class="btn btn-outline-secondary">&#x1F4C3;</a>
                        <a asp-action="Delete" asp-route-id="@item.OptionId" class="btn btn-outline-secondary">&#x1F5D1;</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>